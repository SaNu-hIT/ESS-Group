                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
android:editable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:drawablePadding="5dp"
                                android:hint="Amount"
                                android:inputType="numberDecimal"
                                android:letterSpacing="0.02"
                                android:padding="10dp"


                                android:textColor="@color/black"
                                android:textColorHint="#000000"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tax %" />

                            <glog.leeway.com.home_page.Customfont.MyEditText
                                android:id="@+id/taxamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"

                                android:drawablePadding="5dp"
                                android:hint="Tax Amount 15 %"
                                android:inputType="number"
                                android:letterSpacing="0.02"
                                android:padding="10dp"

                                android:text="15"
                                android:textColor="@color/black"
                                android:textColorHint="#000000"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Amount" />


                        <glog.leeway.com.home_page.Customfont.MyEditText
                            android:id="@+id/total_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                            android:drawablePadding="5dp"
                            android:hint="Total"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:inputType="numberDecimal"
                            android:letterSpacing="0.02"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <glog.leeway.com.home_page.Customfont.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Advance Amount" />

                        <glog.leeway.com.home_page.Customfont.MyEditText
                            android:id="@+id/advance_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                            android:drawablePadding="5dp"
                            android:hint="Advance"
                            android:inputType="numberDecimal"
                            android:letterSpacing="0.02"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <glog.leeway.com.home_page.Customfont.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Balance Amount" />

                        <glog.leeway.com.home_page.Customfont.MyEditText
                            android:id="@+id/balace_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                            android:drawablePadding="5dp"
                            android:hint="Balance"
                            android:inputType="numberDecimal"
                            android:letterSpacing="0.02"
                            android:padding="10dp"
                            android:textColor="@color/black"

                            android:textColorHint="@color/black"
                            android:textSize="12dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/but_shape"
                android:letterSpacing="0.02"
                android:shadowColor="@color/black"
                android:text="SAVE BILL"

                android:textColor="#fcf9f9"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/bacj_icons"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        <glog.leeway.com.home_page.Customfont.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item details"
            android:textColor="#ffff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>


