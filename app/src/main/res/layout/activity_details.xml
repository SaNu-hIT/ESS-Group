<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

   >



    <LinearLayout
        android:layout_width="fill_parent"
android:layout_weight="1"
        android:background="@color/white"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
android:visibility="invisible"
                android:src="@drawable/close_icon"
                android:layout_gravity="right|end"
                />




            <glog.leeway.com.home_page.Customfont.TextView_Lato
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="28dp"
                android:layout_weight="1"

                android:gravity="center_horizontal|center_vertical"
                android:text="INVOICE"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
android:onClick="onBackPressed"

                android:layout_margin="10dp"
                android:src="@drawable/close_icon"
                android:layout_gravity="center|end"
        />




        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
        android:gravity="right"
        android:visibility="gone"
            android:layout_height="match_parent">



<ImageView
    android:layout_width="100dp"
    android:background="@drawable/ess_logo"
android:layout_marginRight="10dp"

    android:layout_gravity="right"
    android:layout_height="50dp" />




        </LinearLayout>

   <LinearLayout
            android:layout_width="match_parent"

        android:gravity="center_horizontal"
       android:orientation="vertical"
            android:layout_height="match_parent">


<glog.leeway.com.home_page.Customfont.MyTextView
    android:layout_width="match_parent"
    android:id="@+id/cust_name"
    android:text="Name"
    android:layout_margin="10dp"
    android:layout_height="wrap_content" />

<glog.leeway.com.home_page.Customfont.MyTextView
    android:layout_width="match_parent"
    android:text="Email_id"
    android:layout_margin="10dp"
    android:id="@+id/email_id"
    android:layout_height="wrap_content" />

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
<glog.leeway.com.home_page.Customfont.MyTextView
    android:layout_width="match_parent"
    android:text="mobile"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:id="@+id/mobile"
    android:layout_height="wrap_content" />
       <glog.leeway.com.home_page.Customfont.MyTextView
    android:layout_width="match_parent"
    android:text="TIN NO"
    android:id="@+id/altmobile"
           android:layout_weight="1"
           android:layout_margin="10dp"
    android:layout_height="wrap_content" />
       </LinearLayout>







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <glog.leeway.com.home_page.Customfont.TextView_Lato

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Item Name"


                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    />


                <glog.leeway.com.home_page.Customfont.TextView_Lato
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:text="Rate"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    />


                <glog.leeway.com.home_page.Customfont.TextView_Lato
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:layout_weight="1"
                    android:text="Quantity"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    />
                <glog.leeway.com.home_page.Customfont.TextView_Lato

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Total"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    />









            </LinearLayout>
        </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/recyclerview"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
android:visibility="gone"
    android:layout_height="wrap_content">


    <glog.leeway.com.home_page.Customfont.MyTextView
        android:layout_width="match_parent"
        android:text="amount"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/amount"
        android:layout_height="wrap_content" />

    <!--<glog.leeway.com.home_page.Customfont.MyTextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:text="tax"-->
        <!--android:layout_margin="10dp"-->
        <!--android:layout_weight="1"-->
        <!--android:id="@+id/tax"-->
        <!--android:layout_height="wrap_content" />-->

    <glog.leeway.com.home_page.Customfont.MyTextView
        android:layout_width="match_parent"
        android:text="total"
        android:id="@+id/total"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />




</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <glog.leeway.com.home_page.Customfont.MyTextView
                android:layout_width="match_parent"
                android:text="Total :"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"

                android:layout_height="wrap_content" />
            <glog.leeway.com.home_page.Customfont.MyTextView
                android:layout_width="match_parent"
                android:text="advance"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/total_amount"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_height="wrap_content">

            <glog.leeway.com.home_page.Customfont.MyTextView
                android:layout_width="match_parent"
                android:text="Advance :"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"

                android:layout_height="wrap_content" />
            <glog.leeway.com.home_page.Customfont.MyTextView
                android:layout_width="match_parent"
                android:text="advance"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/advance"
                android:layout_height="wrap_content" />
        </LinearLayout>
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
     android:visibility="gone"
            android:layout_height="wrap_content">

            <glog.leeway.com.home_page.Customfont.MyTextView
                android:layout_width="match_parent"
                android:text="TAX :"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"

                android:layout_height="wrap_content" />

     <glog.leeway.com.home_page.Customfont.MyTextView
         android:layout_width="match_parent"
         android:text="balance"
         android:id="@+id/tax"
         android:layout_weight="1"
         android:layout_gravity="right"
         android:gravity="right"
         android:layout_margin="10dp"
         android:layout_height="wrap_content" />

 </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <glog.leeway.com.home_page.Customfont.MyTextView
           android:layout_width="match_parent"
           android:text="Balance :"
           android:layout_weight="1"
           android:layout_gravity="right"
           android:gravity="right"
           android:layout_margin="10dp"
           android:layout_height="wrap_content" />

       <glog.leeway.com.home_page.Customfont.MyTextView
           android:layout_width="match_parent"
           android:text="balance"
           android:id="@+id/balance"
           android:layout_weight="1"
           android:layout_gravity="right"
           android:gravity="right"
           android:layout_margin="10dp"
           android:layout_height="wrap_content" />
   </LinearLayout>


    </LinearLayout>



</ScrollView>



    </LinearLayout>

    <glog.leeway.com.home_page.Customfont.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="2dp"

        android:text="POWERED BY LEEWAYS"/>

</LinearLayout>
